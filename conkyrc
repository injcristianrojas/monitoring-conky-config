# set to yes if you want tormo to be forked in the background
background no

cpu_avg_samples 2
net_avg_samples 2

out_to_console no

# Use Xft?
use_xft yes

# Xft font when Xft is enabled
xftfont Bitstream Vera Sans Mono:size=8

# Text alpha when using Xft
xftalpha 0.8

# Update interval in seconds
update_interval 1
# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_transparent yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 250 5
maximum_width 220

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no

# Draw borders around text
draw_borders no

# Stippled borders?
stippled_borders 8

# border width
border_width 1

# Default colors and also border colors
default_color white
default_shade_color black
default_outline_color black

# Text alignment, other possible values are commented
#alignment top_left
#alignment top_right
#alignment bottom_left
alignment bottom_right

# Gap between borders of screen and text
gap_x 13
gap_y 7

# Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer left

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# stuff after 'TEXT' will be formatted on screen
TEXT
$nodename - $kernel on $machine
${color #808080}$hr$color
Regular package updates: ${execi 60 /usr/lib/update-notifier/apt-check 2>&1 | cut -d ';' -f 2}
Security package updates: ${execi 60 /usr/lib/update-notifier/apt-check 2>&1 | cut -d ';' -f 1}
${color #808080}$hr$color
Uptime:$color $uptime
CPU Load: $loadavg
CPU Usage: ${cpu}% ${cpubar}
${cpugraph}
RAM Usage: $mem/$memmax - $memperc%
$membar
${memgraph}
Swap Usage: $swap/$swapmax - $swapperc%
Battery Charge: ${battery_percent}% ${battery_bar}
${color #808080}$hr$color
Wireless Networking Stats:
Down:${downspeed eth1}  ${alignr} Up: ${upspeed eth1}
${downspeedgraph eth1 32,100} $alignr${upspeedgraph eth1 32,100}
${color #808080}$hr$color
Service Monitoring:
${execpi 10 python ~/.conky/scripts/monitor.py mon1}
${execpi 10 python ~/.conky/scripts/monitor.py mon2}
${execpi 10 python ~/.conky/scripts/monitor.py mon3}